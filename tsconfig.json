{
  "compilerOptions": {
    "module": "ESNext",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": ["ESNext"],
    "sourceMap": false,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  // "include": [
  //   "*.d.ts"
  // ],
  "exclude": ["node_modules", "playground", "dist"]
}
